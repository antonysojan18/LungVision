{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/app.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "app.py": {
            "runtime": "vercel-python@0.14.9",
            "memory": 1024,
            "maxDuration": 30
        }
    }
}